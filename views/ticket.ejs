<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <title>Ether Panel</title>
    <%- include('bootstrap/style.ejs') %>
        <style>
            html,
            body {
                height: 100%;
            }
            
            .grid-container {
                display: grid;
                grid-template-columns: 0.7fr 1.3fr 1.3fr 0.7fr;
                grid-template-rows: 0.2fr 1.8fr 0.2fr;
                gap: 0px 0px;
                grid-template-areas: ". . . ."". TABLEAU TABLEAU ."". . . .";
                height: 100%;
            }
            
            .TABLEAU {
                grid-area: TABLEAU;
            }
        </style>
</head>

<body>
    <%- include('includes/sidebar.ejs') %>



        <div class="grid-container">
            <div class="TABLEAU">
                <h1>Liste des tickets de
                    <%=ticketof%>
                </h1>
                <% tickets.forEach(ticket => {%>


                    <div class="card">
                        <h3 class="card-header text-center font-weight-bold text-uppercase py-4">
                            Ticket nÂ°
                            <%=ticket.index %>
                        </h3>
                        <div class="card-body">
                            <discord-messages>
                                <% ticket.messages.forEach(msg => {%>
                                    <discord-message author="<%=msg.author%>" avatar="<%=msg.authorimg%>">
                                        <%=msg.content%>
                                    </discord-message>
                                    <%})%>
                            </discord-messages>
                        </div>
                    </div>
                    <%})%>
            </div>
        </div>
